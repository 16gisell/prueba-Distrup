<div class="container">
    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                </ul>

                <div class="text-end">
                    <button type="button" class="btn btn-outline-light me-2"><%= button_to "Calcular monto a invertir", calcular_inversion_path, method: :post %></button>
                    
                    <button type="button" class="btn btn-warning"><%= button_to "Promedio desde csv", promedio_csv_path, method: :post %></button>
                    <%= form_tag importar_csv_path, multipart: true do %>
                        <%= file_field_tag :file %>
                        <%= submit_tag 'importar csv' %>
                    <% end %>
                </div>
            </div>
        </div>
  </header>
</div>